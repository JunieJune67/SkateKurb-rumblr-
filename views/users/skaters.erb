<%= erb :header %>
<h2> Welcome to your Page <%= @user.username  %></h2>
 



<div class="container full-skater">
    
    <div class="row skaters-info">
    
        <div class="column skaters-NB">
            #   full name & bio
            <p>Name: <%= @user.first_name%>, <%= @user.last_name %></p>
        </div>
  
        <div class="column skaters-BE">
            #   birthday & email
            <p>Birthday: <%= @user.birthday %></p>
            <p>Email: <%= @user.email %></p>

        </div>
        
      
    </div>
    
    
 
</div><br>

<h2>Write A Piece!</h2>
    <div class="container small">
        
    <form class="entries" action="/articles/journalentries" method="post">
        <div class="#">
            
                <label for="name" class="label">Title</label>
                <input type="text" name="title">
            </div>

            <div class="#">
            
                <label for="name" class="label">Topic</label>
                <input type="text" name="subcategory">
            </div>
            
           
           <div>
            <textarea placeholder="Write Your Piece" name="text"></textarea>
            </div>
                <div>
                <cite> <%= @user.username %></cite> 
                           
            <div class="group">
                <input type="submit" class="button" value="submit">
            </div>
            </form>
        </div><br>
        <br>
        <br>

        <% @journals.each do |journal| %>
        <h3 id="jtitle" >    <%= journal.title %>    </h3>
        <h4 id="jsub">    <%= journal.subcategory %> </h4>
        <p id="jtext">    <%= journal.text %>     </p>
        <h4 class="namesign"> <cite> <%= @user.username %></cite></h4>
         <cite> <%=  journal.created_at  %> </cite>
         <form action="/trashjournal/" method="delete">
        <input id="#" type="submit" name="delete" value="Delete Journal">
          </form> 


        <% end %>

    














